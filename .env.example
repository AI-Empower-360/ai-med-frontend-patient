# AI Med Patient Portal - Environment Configuration
# Copy this file to .env.local and update with your values

# API Configuration
# Base URL for the backend REST API
# Development: http://localhost:3001
# Production: https://api.aimed.example.com
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# WebSocket Configuration (optional)
# If not set, will use NEXT_PUBLIC_API_BASE_URL
# Development: ws://localhost:3001
# Production: wss://api.aimed.example.com
NEXT_PUBLIC_WS_BASE_URL=

# Demo Mode
# Set to "true" or "1" to enable demo mode (uses mock data, no backend required)
# Set to "false" or "0" to connect to real backend API
NEXT_PUBLIC_DEMO_MODE=true

# Environment
# Development, staging, or production
NODE_ENV=development
